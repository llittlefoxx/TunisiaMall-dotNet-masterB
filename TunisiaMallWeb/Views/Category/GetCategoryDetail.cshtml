@model TunisiaMall.Domain.Entities.category

@{
    ViewBag.Title = "GetCategoryDetail";
}

<h2>Category Information</h2>

<div>
    <h4>Category</h4>

    <div>

        @if (Model.libelle == "Electronics")
            {

            <img src="http://localhost/electronics.jpg">
        }
        @if (Model.libelle == "Clothing")
            {

            <img src="http://localhost/clothing.jpg">
        }@if (Model.libelle == "Cosmetics")
            {

            <img src="http://localhost/cosmetics.jpg">
        }

    </div>
    <hr />
    <dl class="dl-horizontal">
    
     
        <dt>
            @Html.DisplayName("Category Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.libelle)
        </dd>

        <dt>
            @Html.DisplayName("Category Description")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

      

    </dl>
</div>
<p>
   
    @Html.ActionLink("Back to List", "GetAllCategoriesList")
</p>
