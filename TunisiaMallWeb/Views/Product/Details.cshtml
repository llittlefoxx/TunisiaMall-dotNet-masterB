@model TunisiaMall.Domain.Entities.product

@{
    ViewBag.Title = "Details";
    
}

<h2>Product Details</h2>

<div>
    <h4>@Model.libelle</h4>
    <hr />
    <img src="@Model.images.First().imagePath" width="100" height="100" alt="Image" />
    <dl class="dl-horizontal">

            <dt>
            @Html.DisplayName("Libelle")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.libelle)
        </dd>

        <dt>
            @Html.DisplayName("Price")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.sellPrice)
        </dd>


        <dt>
            @Html.DisplayName("Available quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.qte)
        </dd>

    
        <dt>
            @Html.DisplayName("State")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.state)
        </dd>

        <dt>
            @Html.DisplayName("Promotion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.promotion.name)
        </dd>
        <dt>
            @Html.DisplayName("Promotion Value")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.promotion.value)
        </dd>
        <dt>
            @Html.DisplayName("Start Promotion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.promotion.startDate)
        </dd>

        <dt>
            @Html.DisplayName("End Promotion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.promotion.endDate)
        </dd>

        <dt>
            @Html.DisplayName("Store")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.store.name)
        </dd>

        <dt>
            @Html.DisplayName("Sub Category")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.subcategory.libelle)
        </dd>
        <dt>
            @Html.DisplayName("Category")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.subcategory.category.libelle)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Add to cart", "AddToCart", new { id = Model.idProduct}) |
    @Html.ActionLink("Back to List", "Index")
</p>
